<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="eGram Panchayat"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginBottom="140dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:id="@+id/admin_login_username"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/admin_login_password"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:buttonTint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/admin_login_checkbox"/>

    <Button
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@color/start2"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:id="@+id/admin_login_button"/>



    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_login_progressBar"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:visibility="invisible"
        android:layout_marginTop="20dp"/>



</LinearLayout>